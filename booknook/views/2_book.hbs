<!DOCTYPE html>
<html>
<head>
    <title>{{title}} | Book Nook</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="css/2_book.css">
</head>
<body style="background-color: {{color}};">
    <!-- tag adding modal -->
    <div class="modal fade" id="add_tag_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Tag</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
                <label for="tag">Tag:</label>
                <input type="text" id="tag" name="tag" /><br>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="updateTags()" data-dismiss="modal">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
	
	<!-- quote adding modal -->
    <div class="modal fade" id="add_quote_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Quote</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
                <label for="quote">Quote:</label>
                <input type="text" id="quote" name="quote" ><br>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="updateQuotes()" data-dismiss="modal">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
	
	<!-- note adding modal -->
    <div class="modal fade" id="add_note_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Note</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
                <label for="note">Note:</label>
                <input type="text" id="note" name="note" ><br>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="updateNotes()" data-dismiss="modal">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- folder adding modal -->
    <div class="modal fade" id="add_folder_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Folder</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/newFolder" method="get">
                <label for="folder-title">Title:</label>
                <input type="text" id="folder-title" name="title" /><br>
                <input type="checkbox" id="type1" name="type" value="Text">
                <label for="type1">Text</label>
                <input type="checkbox" id="type2" name="type" value="Images">
                <label for="type2">Images</label>
                <input type="checkbox" id="type3" name="type" value="Images">
                <label for="type3">Video</label>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="updateFolders()" data-dismiss="modal">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
	
	<!-- text folder item adding modal -->
    <div class="modal fade" id="add_folder_item_text_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Folder Item: Text</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
                <label for="text">Text:</label>
                <input type="text" id="text" name="text" /><br>
				<label for="text-notes">Notes:</label>
                <input type="text" id="text-notes" name="notes" /><br>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="addItem()" data-dismiss="modal">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
	
	<!-- img/vid item adding modal -->
    <div class="modal fade" id="add_folder_item_img_vid_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Folder Item: Media</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
                <label for="link">Link:</label>
                <input type="text" id="link" name="link" /><br>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="addItem()" data-dismiss="modal">Submit</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    
	<div id="folderDisplay">
		<button id="addToFolder" onclick="showAddItemModal()">Add Item</button>
	</div>
    <!-- book content --> 
	<div id="title" style="color: {{text}};">
        <center><h1>{{title}}</h1></center>
        <center><h3>{{author}}</h3></center>
	</div>
    <div id="inner">
        <div id="cover" class="reg-div">
            <<img src="{{img}}" />
        </div>
        <div id="rating" class="reg-div">
            <div class="stars">
				{{>stars}}
			</div>
        </div>
        <div id="tags" class="reg-div">
            <div class="tag-elem" onclick="showAddTagModal()">
                <center><p>Add Tag</p></center>
            </div>
            {{#each tagNames}}
                <div class="tag-elem">
                    <center><p>{{this}}</p></center>
                </div>
            {{/each}}
        </div>
        <div id="quotes" class="reg-div scrolling">
            <div class="quotes-head">
				<h4>Quotes</h4>
				<button onclick="showAddQuoteModal()">+</button>
			</div>
			<div class="carousel">
				<button onclick="carouselPrev()"> &< </button>
				<div class="carousel-display" id="carousel-display">
					<p>Quote</p>
				</div>
				<button onclick="carouselNext()"> &> </button>
			</div>
        </div>
        <div id="notes" class="reg-div scrolling">
			<div class="quotes-head">
				<h4>Notes</h4>
				<button onclick="showAddNoteModal()">+</button>
			</div>
			<div class="notes-gallery" style="color: {{text}};">
				{{#each notes}}
					<p class="note" style="background-color: {{../color}};">{{this}}</p>
				{{/each}}
			</div>
        </div>
        <div id="folders" class="reg-div">
            {{#each folders}}
                <div class="folder" onclick="showFolder('{{folderName}}', '{{contentType}}')">
                    <img src="./img/folder.png">
                    <center><p>{{folderName}}</p></center>
                </div>
            {{/each}}
            <div class="folder" onclick="showAddFolderModal()">
                <img src="./img/folder.png">
                <center><p>Add New</p></center>
            </div>
        </div>
    </div>
    
    <p id="id-info" className="hidden">{{bookId}}</p>
	<p id="rating-info" className="hidden">{{rating}}<p>
	
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script type="text/javascript" src="js/2_book_stars.js"></script>
<script type="text/javascript" src="js/2_book_tags.js"></script>
<script type="text/javascript" src="js/2_book_folders.js"></script>
<script type="text/javascript" src="js/2_book_quotes.js"></script>
<script type="text/javascript" src="js/2_book_notes.js"></script>
</html>